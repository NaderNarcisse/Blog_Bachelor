                   value="Voir mes articles"
                   style="float:left; margin-right: 1rem;">
        </form>
        {{/if}}
        </form>
        <form action="/">
            <input type="hidden"
                   name="page"
                   value="Voir_ASC">
            <input type="submit"
                   value="Voir les derniers articles publiés"
