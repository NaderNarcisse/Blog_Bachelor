        </form>        </form>
        <form action="/">
            <input type="hidden"
                   name="page"
                   value="Voir_DESC">
            <input type="submit"
                   value="Voir les premiers articles publiés">
        </form>

        {{{body}}}


        <div class="w3-card-4 w3-margin w3-white">
            <div class="w3-container">
                {{#if page_retour}}
                    <button onclick="window.location.href = '?index={{{page_retour}}}'">Retour</button>
                {{/if}}
                {{#if page_retour_art}}
                    {{#if statut_art}}
                        <button onclick="window.location.href = '?index={{{page_retour_art}}}&&article={{{page_retour_art_id}}}'">Retour</button>
                    {{else}}
                        <button onclick="window.location.href = '?index={{{page_retour_art}}}'">Retour</button>
                    {{/if}}
                {{/if}}
                {{#if buton_Av_Ap}}
                <h3><b>Lire la suite</b></h><br>
                    {{#if Av}}
                        <form action="/">
                            <input type="hidden"
                                   name="index"
                                   value="{{{Av}}}">
                            <input type="submit"
                                   value="Précédent"
                                   style="float:left; margin-right: 1rem;">
                        </form>
                    {{else}}
                        <form action="/">
                            <input type="hidden"
                                   name="index"
                                   value="{{{Av}}}">
                            <input type="submit"
                                   value="Précédent"
                                   style="float:left; margin-right: 1rem;" disabled>
                        </form>
                    {{/if}}
                    {{#if Ap}}
                        <form action="/">
                            <input type="hidden"
                                   name="index"
                                   value="{{{Ap}}}">
                            <input type="submit"
                                   value="Suivant">
                        </form>
                    {{else}}
                        <form action="/">
                            <input type="hidden"
                                   name="index"
                                   value="{{{Ap}}}">
                            <input type="submit"
                                   value="Suivant" disabled>
                        </form>
                    {{/if}}
                    {{/if}}
                    {{#if admin}}
                        <form action="/">
                            <input type="hidden"
                                   name="page"
                                   value="role">
                            <input type="submit"
                                   value="Gestion des rôles"
                                   style="float:left; margin-right: 1rem;">
                        </form>
                    {{/if}}
                    {{#if ecriture}}
                        <form action="/">
                            <input type="hidden"
                                   name="page"
                                   value="AddArt">
                            <input type="submit"
                                   value="Ecrire un nouvel article">
                        </form>
                    {{/if}}
            </div>

        </div>
