        <form action="/">
            <input type="hidden"
                   name="page"
                   value="LogOut">
            <input type="submit"
                   value="LogOut"
                   style="float:left; margin-right: 1rem;">
        </form>
        <form action="/">
            <input type="hidden"
                   name="page"
                   value="profil">
            <input type="submit"
                   value="Profil">
        </form>
        <form action="/">
            <input type="hidden"
                   name="page"
                   value="article">
            <input type="submit"
                   value="Voir les articles"
                   style="float:left; margin-right: 1rem;">
        </form>
        {{#if publisher}}
        <form action="/">
            <input type="hidden"
                   name="page"
                   value="NArt">
            <input type="submit"
                   value="Voir les articles non publiés"
                   style="float:left; margin-right: 1rem;">
        </form>
        {{/if}}
        {{#if writer}}
        <form action="/">
            <input type="hidden"
                   name="page"
                   value="MesArt">
